import grlib
from tkinter import *
root=Tk()
root.title("Instru")
canvas=Canvas(root,width=350,height=350)
canvas.pack()
obj1=grlib.grafica(marco=canvas,
    posicion=[50,100],
    escala=[25,50],
    tam=[100,200],
    color='red',
    offset=[25,25],
    nombre=['x1','altura'])
obj1.cpunto(50,0)
obj1.cpunto(50,25)
obj1.cpunto(50,50)
obj1.cpunto(50,75)
obj1.cescalas()
obj1.ccuadricula()
obj2=grlib.grafica(marco=canvas,
    posicion=[150,100],
    escala=[25,50],
    tam=[100,200],
    color='blue',
    offset=[25,25],
    nombre=['x2','altura'])
obj1.cpunto(50,0)
obj1.cpunto(50,25)
obj1.cpunto(50,50)
obj1.cpunto(50,75)
obj1.cescalas()
obj1.ccuadricula()
mainloop()
